{% extends 'base.html.twig' %}

{% block title %}Detail annonce{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">
        <div class="card col-8">
            {#    START Caroussel #}
            <div id="carouselExampleControls" class="carousel slide card-img-top" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="{{ ad.picturesAllDogs.first }}" class="d-block w-100 img-carousel" alt="...">
                    </div>
                    {% for picture in ad.picturesAllDogs %}
                        {% if picture == ad.picturesAllDogs.first %}
                        {% else %}
                        <div class="carousel-item">
                            <img src="{{ picture }}" class="d-block w-100 img-carousel" alt="...">
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            {#    END Caroussel #}
            <div class="card-body">
                <div class="d-flex card-title justify-content-between">
                    <h5>{{ ad.title }}</h5> <p>{{ ad.dateUpdate.timestamp |date("Y-m-d")}}</p>
                </div>
                <h6 class="card-title"></h6>
                <ul class="list-group">
                    <li class="list-group-item">Chiens :</li>
                    {% for dog in dogs %}
                        <li class="list-group-item">Nom : {{ dog.name }} Race : {{ dog.races.first }} {% if dog.lof %} Le chien est LOF{% endif %}</li>
                    {% endfor %}
                    <li class="list-group-item"><h6 class="card-title">Description :</h6>
                        <p>{{ ad.description }}</p></li>
                </ul>


                <a href="{{ path('demand', {'id': ad.id}) }}" class="btn btn-success">Faire une demande</a>
            </div>
        </div>
    </div>

{% endblock %}
