{% block collection_row %}
    <div class="container">
        <div class="list-{{ id }}"
             data-prototype="{{ form_widget(prototype)|e }}"
             data-widget-tags="{{ '<li></li>'|e }}"
             data-widget-counter="{{ form.children|length }}"
        >
            {% for child in form.children %}
                <div>
                    {{ form_widget(child) }}
                </div>
            {% endfor %}
        </div>
    </div>
    <button class="add btn btn-outline-success" type="button" data-collection-holder-class="list-{{ id }}">Ajouter {{ name }}</button>
{% endblock %}