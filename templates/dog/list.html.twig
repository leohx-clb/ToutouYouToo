{% extends 'base.html.twig' %}

{% block title %}Tous les Chiens{% endblock %}

{% block body %}
<div class="d-flex justify-content-center mt-5">
    <div  class="col-6">
    <h1>Tous les Chiens</h1>
        <div class="container">
            <h2>Tous Nos Toutous</h2>
            <div class="row justify-content-center">
                {% for dog in dogs %}
                    <div class="card mb-3 col-3 d-flex justify-content-center ">
                        <h3 class="card-header">{{ dog.name }}</h3>
                        <div class="card-body">
                            <h5 class="card-title"></h5>
                            <h6 class="card-subtitle text-success">{{ dog.isAvailable ? 'Disponible Ã  l\'adoption' : ''}}</h6>
                            {% for picture in dog.pictures %}
                                <img src="{{ picture.url }}" width="100%" height="220px" object-fit=cover" object-position ="center">
                            {% endfor %}
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">sexe : {{ dog.sex }}</li>
                            <li class="list-group-item">Accepte les autres animaux : {{ dog.animalsFriendly ? 'Oui' : 'Non' }}</li>
                            <li class="list-group-item">L.O.F : {{ dog.lof ? 'Oui' : 'Non'}}</li>
                        </ul>
                        <div class="card-body">
                            <a href="#" class="card-link">Details</a>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>
</div>

{% endblock %}
